@model IEnumerable<DataLayer.Weather>

@{
                /**/

                ViewBag.Title = "City Weather";
}

<h2>City Weather Condition</h2>

<table class="table" border="1">
    <tr>
        <th>
            Weather Condition
        </th>
        <th>
            City Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.temperature.metric.Unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.temperature.metric.Value)
        </th>
        <th> Action </th>
    </tr>

    <tr>
        @foreach (var item in Model)
        {
            <td>

                @Html.DisplayFor(model => item.WeatherText)
            </td>
            <td>
                @Html.DisplayFor(model => item.LocalizedName)
            </td>
            <td>
                @Html.DisplayFor(model => item.temperature.metric.Unit)
            </td>
            <td>
                @Html.DisplayFor(model => item.temperature.metric.Value)
            </td>
            <td>
                @Html.ActionLink("Set Preference", "SetPreference", new { key = item.Key, strCityName = item.LocalizedName }) |
                @Html.ActionLink("Select Region", "Index")
            </td>
        }
        </tr>
        

</table>
